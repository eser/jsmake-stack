{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "removeComments": true,
        "strict": true,
        "newLine": "LF",
        "rootDir": "./src/",
        "outDir": "./dist/npm/",
        "lib": [
            "es2015"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
    ]
}
